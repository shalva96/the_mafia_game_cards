<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/splash_screen_gradient"
    tools:context=".presentation.screen.splashScreen.SplashScreenFragment">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/boss_iv"
        android:layout_width="250dp"
        android:layout_height="250dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/mafia_boss"
        />
    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/boss_iv"
        app:layout_constraintStart_toStartOf="@id/boss_iv"
        app:layout_constraintEnd_toEndOf="@id/boss_iv"
        />


</androidx.constraintlayout.widget.ConstraintLayout>